<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/itemview_border"
    >


    <TextView
        android:id="@+id/stockTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:text="종목명"
        android:gravity="center"
        android:layout_margin="10sp"

        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="5sp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id = "@+id/buydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3sp"

            android:text="매수일"
            android:gravity="center"
            />

        <TextView
            android:id = "@+id/buyday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="보유기간"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="5sp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/ProfitLoss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3sp"
            android:text="평가손익"
            android:gravity="right" />

        <TextView
            android:id="@+id/returnRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수익률"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="5sp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/evaluationAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3sp"
            android:text="평가금액"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/purchaseAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매수금액"
            android:gravity="right" />
    </LinearLayout>

</LinearLayout>